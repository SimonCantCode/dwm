#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
âŒ: wifi disabled
ó±›… : no wifi connection
ó°–© : wifi connection with quality
ó°ˆ : no ethernet
ðŸŒ: ethernet working
ðŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

if grep -xq 'up' /sys/class/net/w*/operstate 2>/dev/null ; then
	[ $(awk '/^\s*w/ { print int($3 * 100 / 70) }' /proc/net/wireless) != 100 ] && wifiicon="$(awk '/^\s*w/ { print "ó°–© ", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
	[ $(awk '/^\s*w/ { print int($3 * 100 / 70) }' /proc/net/wireless) -eq 100 ] && wifiicon="$(echo 'ó°–©  ðŸ’¯%')"
elif grep -xq 'down' /sys/class/net/w*/operstate 2>/dev/null ; then
	grep -xq '0x1003' /sys/class/net/w*/flags && wifiicon="ó±›… " || wifiicon="âŒ "
fi

printf "%s%s%s\n" "$wifiicon" "$(sed "s/down//;s/up/ó°ˆ/" /sys/class/net/e*/operstate 2>/dev/null)" "$(sed "s/.*/ðŸ”’/" /sys/class/net/tun*/operstate 2>/dev/null)"
